Bootstrap: docker
From: intelpython/intelpython3_full

%setup

%post
   # install pre-reqs
   /opt/conda/bin/pip install haversine
   /opt/conda/bin/pip install jupyter

   # git clone travelling beerman
   # cd ${SINGULARITY_ROOTFS}
   git clone https://github.com/pvelesko/datapup.git

%runscript
   cd /datapup
   . /opt/conda/bin/mpivars.sh
   NRANK=`nproc`
   mpirun -n $NRANK python ./datadog_oop.py
